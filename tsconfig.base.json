{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["dom", "dom.iterable", "es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "baseUrl": ".",
    "paths": {
      "@sillok/design-token": ["libs/design-token/src/index.ts"],
      "@sillok/design-token/*": ["libs/design-token/src/*"],
      "@sillok/hooks": ["libs/hooks/src/index.ts"],
      "@sillok/hooks/*": ["libs/hooks/src/*"],
      "@sillok/ui": ["libs/ui/src/index.ts"],
      "@sillok/ui/*": ["libs/ui/src/*"]
    }
  }
}
